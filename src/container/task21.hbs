{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    {{#with heading}}
    <div class="card">
        <div class="card-body">
            {{#with main}}
            <h1>{{title}}</h1>
            <p>{{text}}</p>
            {{#with button_text}}
            <button class="btn btn-primary">{{solid}}</button>
            <br>
            <br>
            <button class="btn btn-outline-primary">{{outline}}</button>
            {{/with}}
            {{/with}}
        </div>
    </div>
    <br>
    <br>

    {{#with second}}
    <div class="card">
        <div class="card-body">
            <h2>{{title}}</h2>
            <p>{{text}}</p>
            {{#with button_text}}
            <button class="btn btn-secondary">{{solid}}</button>
            <br>
            <br>
            <button class="btn btn-outline-secondary">{{outline}}</button>
            {{/with}}

        </div>
    </div>
    {{/with}}
    <br>
    <br>
    {{#with subblock}}
    <div class="card">
        <div class="card-body">
            <h3>{{title}}</h3>
            <p>{{text}}</p>
            {{#with button_text}}
            <button class="btn btn-dark">{{solid}}</button>
            <br>
            <br>
            <button class="btn btn-outline-dark">{{outline}}</button>
            {{/with}}

        </div>
    </div>
    {{/with}}

    {{/with}}



    <br>
    <br>
    {{#with nested_display}}
    <div class="card">
        <div class="card-body">
            <div class="display-1">{{title}}</div>
            <br>
            <br>
            {{#with children_display}}
            <div class="card">
                <div class="card-body">
                    <div class="display-4">{{title}}</div>
                    <p>{{text}}</p>
                    {{#with button}}
                    <button class="btn btn-warning">{{text}}</button>
                    {{/with}}
                </div>
            </div>
            {{/with}}
            <br>
            <br>
            <div class="display-6">{{header_text}}</div>
            <br>
            {{#with button}}
            <button class="btn btn-info">{{text}}</button>
            {{/with}}
        </div>
    </div>
    {{/with}}
    <br>
    <br>


    {{#with paragraph}}
    <div class="card">
        <div class="card-body">
            <div class="text-uppercase">{{title}}</div>
            <br>
            <div class="text-lowercase">{{text}}</div>
            <br>
            {{#with button}}
            <a class="btn-link" href="{{url}}">{{text}}</a>
            {{/with}}
            <br>
            <br>

            <div class="card">
                <div class="card-body">
                    <ul>
                        {{#each list_name}}

                        <li>
                            <a class="btn-link" href="{{url}}">{{text}}</a>
                        </li>

                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {{/with}}
</main>

