{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <div class="nav">
        {{#with navigation}}
        {{#each links}}
        <div class="nav-item">
            <a href={{href}} class="nav-link">{{text}}</a>
        </div>
        {{/each}}

        {{/with}}
        <br>
        <div class="col-12">
            <div class="row">
                <h1>{{header}}</h1>
                <div class="col-8">
                    {{#with contacts_data}}
                    <div class="col-3">
                        <h5>{{title}}</h5>
                    </div>
                    <div class="row">
                        {{#each buttons}}

                        {{#if isPrimary}}
                        <button class="btn btn-warning col-3 m-3">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-warning col-3 m-3">{{text}}</button>
                        {{/if}}

                        {{/each}}
                    </div>
                    <div class="col-12">
                        <div class="row">

                            {{#with form}}

                            {{#with input}}
                            <div class="col-6">
                                {{#with surname}}
                                <label class="form-lable">{{label}}</label>
                                <input class="form-control" placeholder="{{placeholder}}">
                                <div>{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6">
                                {{#with name}}
                                <label class="form-lable">{{label}}</label>
                                <input class="form-control" placeholder="{{placeholder}}">
                                <div>{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6">
                                {{#with phone}}
                                <label class="form-lable">{{label}}</label>
                                <input class="form-control" placeholder="{{placeholder}}">
                                <div>{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6">
                                {{#with email}}
                                <label class="form-lable">{{label}}</label>
                                <input class="form-control" placeholder="{{placeholder}}">
                                <div>{{caption}}</div>
                                {{/with}}
                            </div>
                            {{/with}}
                            <br>
                            <hr>
                            {{#each switch}}
                            <div class="form-check form-switch">
                                <label class="form-check-lable">{{text}}</label>
                                <input name="switch" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                            <br>
                            <br>
                            <hr>

                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                </div>
                <div class="col-4">
                    <div class="card">
                        {{#each action_block}}


                        {{#if isSuccess}}
                        <button class="btn btn-success m-1 p-1">{{text}}</button>
                        {{/if}}
                        {{#if isDanger}}
                        <button class="btn btn-danger m-1 p-1">{{text}}</button>
                        {{/if}}
                        {{#if isInfo}}
                        <button class="btn btn-primary m-1 p-1">{{text}}</button>
                        {{/if}}


                        {{/each}}
                    </div>
                    <br>

                    <div class="card p-2">
                        {{#with total}}
                        <h5>{{title}}</h5>
                        {{#each item_list}}
                        <div>{{name}}:{{price}}</div>
                        {{/each}}
                        <hr>
                        {{#each additional_info}}
                        <div>{{text}}:{{value}}</div>
                        {{/each}}
                        <hr>
                        {{#with total_price}}
                        <div>{{text}}:{{value}}</div>
                        {{/with}}
                        <hr>
                        {{#each button}}
                        {{#if isPrimary}}
                        <button class="btn btn-primary m-1 p-1">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-primary m-1 p-1">{{text}}</button>
                        {{/if}}

                        {{/each}}
                        {{/with}}
                    </div>
                </div>

                <div class="col-12">
                    <div class="row">

                        {{#with delivery}}
                        <h5>{{title}}</h5>

                        {{#each select}}
                        <div class="col-4">
                            <label class="form-lable">{{label}}</label>
                            <select class="form-select form-control">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option>{{text}}</option>

                                {{/each}}
                            </select>
                        </div>
                        {{/each}}
                        <br>
                        <br>
                        <br>
                        {{#each delivery_type}}

                        <div class="form-check">
                            <label class="form-check-label">{{type}}</label>
                            <input type="radio" class="form-check-input">
                        </div>
                        {{/each}}
                        <br>
                        <br>
                        <hr>
                        {{#with payment}}

                        <h5>{{title}}</h5>
                        {{#each list}}
                        <div class="form-check">
                            <label class="form-check-label">{{type}}</label>
                            <input type="radio" class="form-check-input">
                        </div>
                        {{/each}}

                        {{/with}}
                        <br>
                        <br>
                        <hr>
                        <div class="col-12">
                            <div class="row">
                                {{#with contact}}

                                <h5>{{title}}</h5>
                                <div class="col-6">
                                    {{#with surname}}
                                    <label class="form-lable">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div>{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with name}}
                                    <label class="form-lable">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div>{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with phone}}
                                    <label class="form-lable">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div>{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with email}}
                                    <label class="form-lable">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div>{{caption}}</div>
                                    {{/with}}
                                </div>


                                {{/with}}
                            </div>
                        </div>
                        <br>
                        <br>
                        <br>
                        <hr>
                        {{#with coment}}
                        <label class="form-lable">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">

                        {{/with}}
                        <br>
                        <br>
                        <br>
                        <hr>
                        {{/with}}

                        {{#with coupon}}
                        <h5>{{title}}</h5>
                        {{#with select}}
                        {{#with availabel_coupon}}
                        <label class="form-lable">{{label}}</label>
                        <select class="form-select-lg form-control">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option>{{text}}</option>

                            {{/each}}
                        </select>
                        {{/with}}

                        {{#with friend_coupon}}
                        <label class="form-lable">{{label}}</label>
                        <select class="form-select-sm form-control">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option>{{text}}</option>

                            {{/each}}
                        </select>
                        {{/with}}



                        {{/with}}

                        {{#with add}}
                        {{#with friend}}
                        <label class="form-lable">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div>{{caption}}</div>
                        {{/with}}
                        {{#with colleague}}
                        <label class="form-lable">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div>{{caption}}</div>
                        {{/with}}
                        {{/with}}
                        <br>
                        <br>
                        <hr>
                        {{/with}}

                        {{#with quiz}}
                        <h5>{{title}}</h5>
                        {{#with preference}}
                        {{#each options}}
                        <div class="form-check">
                            <label class="form-check-label">{{this}}</label>
                            <input type="radio" class="form-check-input">
                        </div>
                        {{/each}}

                        {{/with}}
                        {{#with your_expirience}}
                        <label class="form-lable">{{label}}</label>
                        <input class="form-control">
                        {{/with}}
                        {{#with purchase_frequency}}
                        <label class="form-lable">{{label}}</label>
                        <select class="form-select form-control">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option>{{text}}</option>
                            {{/each}}
                        </select>
                        {{/with}}
                        {{#with factors}}
                        <div class="form-label">{{title}}</div>
                        {{#each options}}
                        <div class="form-check">
                            <label class="form-check-label">{{this}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}



                        {{/with}}
                        {{/with}}
                        <br>
                        <br>
                        <hr>
                        {{#each footer}}
                        <div class="nav col-2">
                            <div>
                                {{#each this}}
                                <div>
                                    <a class="nav-link" href={{this.link}}>{{this.text}}</a>
                                </div>

                                {{/each}}
                            </div>
                        </div>



                        {{/each}}
                    </div>

                </div>
            </div>
        </div>








</main>

