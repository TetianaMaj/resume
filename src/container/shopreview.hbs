{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <div class="nav">
        {{#with navigation}}
        {{#each links}}
        <div class="nav-item">
            <a href={{href}} class="nav-link">{{text}}</a>
        </div>
        {{/each}}

        {{/with}}
        <div class="col-12">
            <div class="row">
                {{#with formBlock}}
                <div class="col-8">
                    <h1>{{header}}</h1>
                    {{#with rating}}
                    {{title}} {{value}}
                    {{/with}}
                    <div class="nav nav-tabs m-2">
                        {{#with actionBlock}}

                        {{#each tabs}}

                        <div class="nav-item">
                            <a class="nav-link">{{text}}</a>
                        </div>
                        {{/each}}
                        <hr m-4>

                        {{#with report}}
                        <h2>{{title}}</h2>
                        {{#with button}}
                        <button href={{link}} class="btn btn-secondary my-2 px-1">{{text}}</button>
                        {{/with}}
                        {{/with}}
                        {{/with}}
                    </div>

                </div>

                <div class="col-4">
                    <div class="card m-2">
                        {{#with goodsInfo}}
                        <img src="{{photo}}">
                        <h5>{{name}}</h5>
                        <div>{{price}}</div>
                        {{#if inMarket}}
                        є в наявності
                        {{/if}}
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button href={{link}} class="btn btn-primary my-2 px-1">{{text}}</button>
                        {{/if}}
                        {{#if isSecondary}}
                        <button href={{link}} class="btn btn-outline-secondary my-2 px-1">{{text}}</button>
                        {{/if}}

                        {{/each}}
                        <div class="card m-2">
                            {{#with seller}}
                            {{title}} {{value}}
                            {{/with}}
                        </div>
                        {{/with}}

                    </div>

                </div>

                {{#with feedbackBlock}}
                <h1>{{title}}</h1>
                {{#each buttons}}
                <div class="col-2 m-2">
                    {{#if isWarning}}
                    <button href={{link}} class="btn btn-warning my-2 px-1">{{text}}</button>
                    {{/if}}
                    {{#if isSuccess}}
                    <button href={{link}} class="btn btn-success my-2 px-1">{{text}}</button>
                    {{/if}}
                    {{#if isDanger}}
                    <button href={{link}} class="btn btn-danger my-2 px-1">{{text}}</button>
                    {{/if}}
                </div>
                {{/each}}

                {{/with}}
                <hr m-5>

                {{/with}}

                <div class="card">
                    {{#each reviewList}}
                    {{>reviewitem}}
                    {{/each}}
                </div>
                <div class="text-center text-bg-success m-4">
                    {{#with service}}
                    <h2>{{title}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <button href={{link}} class="btn btn-primary my-2 px-1">{{text}}</button>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>


        <br>
        <br>
        <hr>
        {{#each footer}}
        <div class="nav col-2">
            <div>
                {{#each this}}
                <div>
                    <a class="nav-link" href={{this.link}}>{{this.text}}</a>
                </div>

                {{/each}}
            </div>
        </div>



        {{/each}}


    </div>
    </div>








</main>

