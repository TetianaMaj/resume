{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <div class="nav">
        {{#with navigation}}
        {{#each links}}
        <div class="nav-item">
            <a href={{href}} class="nav-link">{{text}}</a>
        </div>
        {{/each}}

        {{/with}}

    </div>

    {{#with newsBlock}}
    <h1 class="text-center">{{title}}</h1>

    <div class="row">
        {{#each cards}}

        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{title}}
                        {{#if isTop}}
                        <span class="badge text-bg-success rounded-pill">НОВА</span>
                        {{/if}}
                        {{#if isNew}}
                        <span class="badge text-bg-danger rounded-pill">ТОП</span>
                        {{/if}}
                    </h5>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
    {{/with}}
    <hr>
    <div class="nav nav-tabs">
        {{#with goodsBlock}}

        {{#each tabs}}

        <div class="nav-item">
            {{#if isActive}}
            <a class="nav-link active">{{text}}</a>
            {{else}}
            <a class="nav-link disabled">{{text}}</a>
            {{/if}}
        </div>
        {{/each}}

    </div>

    <div class="row">

        {{#each cards}}
        <div class="col-4">
            <div class="card">
                <img class="card-img-top" src="https://picsum.photos/400/200">

                <div class="card-body">
                    <h5 class="card-title">{{title}}
                        {{#if isHot}}
                        <span class="badge text-bg-warning rounded-pill">ТОП</span>
                        {{/if}}
                        {{#if isNew}}
                        <span class="badge text-bg-primary rounded-pill">НОВЕ</span>
                        {{/if}}
                    </h5>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
    {{/with}}
    <hr>
    <div class="row ">
        {{#with subscribe}}
        <div class="col-12">
            <div class="card text-bg-dark">
                <h2>{{header}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <div class="col-3">
                    <a href="https://www.youtube.com/" class="btn btn-primary m-2">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}

    </div>
    <hr>

    <div class="row ">
        {{#with service}}
        <div class="col-12">
            <div class="card text-bg-success text-center">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <div class="col-12">
                    <a href="https://www.youtube.com/" class="btn btn-primary m-2">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}

    </div>
    <hr>


    <div class="row ">
        {{#each footer}}
        <div class="nav col-2">
            <div>
                {{#each this}}
                <div>
                    <a class="nav-link" href={{this.link}}>{{this.text}}</a>
                </div>

                {{/each}}
            </div>
        </div>


        {{/each}}
    </div>

</main>

