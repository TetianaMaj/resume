{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <div class="nav">
        {{#with navigation}}
        {{#each links}}
        <div class="nav-item">
            <a href={{href}} class="nav-link">{{text}}</a>
        </div>
        {{/each}}

        {{/with}}
        <div class="col-12">
            <div class="row">
                <div class="breadcrumb">
                    {{#each breadcrumb}}
                    <div class="breadcrumb-item href={{url}}">{{name}}</div>
                    {{/each}}
                </div>

                <h1>{{header}}</h1>
                {{#each sortBlock}}
                <div class="col-3">

                    <select class="form-select form-control">

                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>

                        {{/each}}
                    </select>
                </div>
                {{/each}}
                <div class="col-4">
                    <div class="card m-2">
                        {{#with filterBlock}}
                        {{#with sellers}}
                        <h5>{{title}}</h5>
                        {{#each list}}
                        <div class="form-check">

                            <label class="form-check-lable">{{value}}</label>
                            <input type="checkbox" class="form-check-input">

                        </div>
                        {{/each}}
                        {{/with}}
                        <hr>
                        {{#with brands}}
                        <h5>{{title}}</h5>
                        {{#with input}}

                        <input class="form-control" placeholder="{{placeholder}}">
                        <div>{{caption}}</div>
                        {{/with}}
                        {{#each options}}
                        <div class="form-check">

                            <label class="form-check-lable">{{value}}</label>
                            <input type="checkbox" class="form-check-input">

                        </div>
                        {{/each}}
                        {{/with}}
                        <hr>
                        {{#with price}}
                        <h5>{{title}}</h5>
                        {{#with range}}
                        <input class="form-control" placeholder="{{from}}">
                        <input class="form-control" placeholder="{{to}}">

                        {{/with}}
                        <div class="col-1">
                            {{#with button}}
                            <button href={{link}} class="btn btn-outline-secondary my-2 px-1 btn-sm">{{text}}</button>
                            {{/with}}
                        </div>
                        {{/with}}
                        {{#each filterList}}
                        <h5>{{title}}</h5>

                        {{#each options}}
                        <div class="form-check">

                            <label class="form-check-lable">{{value}}</label>
                            <input type="checkbox" class="form-check-input">

                        </div>
                        {{/each}}
                        {{/each}}
                        {{/with}}


                    </div>
                </div>

                {{#each goodsList}}
                {{>catalogitem}}
                {{/each}}

            </div>
        </div>






        <div class="text-center text-bg-success m-4">
            {{#with service}}
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <button href={{link}} class="btn btn-primary my-2 px-1">{{text}}</button>
            {{/each}}
            {{/with}}
        </div>




        <br>
        <br>
        <hr>
        {{#each footer}}
        <div class="nav col-2">
            <div>
                {{#each this}}
                <div>
                    <a class="nav-link" href={{this.link}}>{{this.text}}</a>
                </div>

                {{/each}}
            </div>
        </div>



        {{/each}}

    </div>
    </div>










</main>

