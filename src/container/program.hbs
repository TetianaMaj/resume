{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with program}}
    {{#with excursion}}
    <h1>{{name}}</h1>
    {{#with location}}
    <address>{{city}}</address>
    <address>{{country}}</address>
    {{/with}}
    <time>{{date}}</time>
    <br>
    <hr>
    <div>
        <section>
            {{>title data="Program" big=true}}
            <ul>
                {{#each program}}
                <li><b>{{name}}</b>
                    <br>
                    {{type}}
                    <br>
                    duration: {{duration}}
                    <br>
                    {{#with details}}





                    {{#with venue}}
                    venue: {{name}}
                    <address>{{location.address}}</address>
                    <br>
                    <address>{{location.city}}, {{location.country}}</address>
                    <br>
                    {{/with}}


                    {{#with museum}}
                    museum: {{name}}
                    <address>{{location.address}}</address>
                    <br>
                    <address>{{location.city}}, {{location.country}}</address>
                    <br>

                    <ul>
                        <em><b>Exhibits</b></em>
                        {{#each exhibits}}
                        <li>
                            <b>{{name}}</b>
                            <br>
                            artist: {{artist}}
                            <br>
                            description: {{description}}
                            <br>
                            {{#if audio_guide}} (audio guide) {{/if}}

                        </li>
                        {{/each}}
                    </ul>

                    {{/with}}
                    <br>
                    Guide: {{#with guide}}
                    <br>
                    <em>{{name}}</em>
                    <br>
                    <em>{{language}}</em>
                    <br>
                    rating: {{rating}}
                    {{/with}}


                    <br>

                    <ul>
                        <em><b>Performers</b></em>
                        {{#each performers}}
                        <li>
                            <b>{{name}}</b>
                            <br>
                            {{type}}
                            <br>

                        </li>
                        {{/each}}
                    </ul>
                    {{/with}}

                </li>
                {{/each}}
            </ul>
        </section>
    </div>




    {{/with}}
    {{/with}}

</div>

