{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <section>
        <h1>{{name}}</h1>
        <em>{{birthdate}} - {{birthplace}}</em>
        <br>
        <em>{{deathdate}} - {{deathplace}}</em>
        <br>
        <br>
        nationality: {{nationality}}
        <br>
        <br>
        <em>occupation: {{occupation}}</em>
        <br>
        <br>
        <hr>
        <strong>
            <em>Known for:</em>
            <ul>
                {{#each known_for}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </strong>
        <hr>

    </section>
    <div>
        <section>
            {{>title data="Education" big=true}}

            <ul>
                {{#each education}}
                <li><em>degree- </em>{{degree}}</li>
                <li><em>field- </em>{{field}}</li>
                <li>{{institution}}</li>
                <li>{{year}}</li>
                {{/each}}
            </ul>
        </section>
    </div>
    <br>
    <hr>
    <div>
        <section>
            {{>title data="Notable publications" big=true}}

            <ul>
                {{#each notable_publications}}
                <li><q><b>{{title}}</b></q>
                    <br>
                    {{year}}
                    <br>
                    {{publisher}}
                </li>
                {{/each}}
            </ul>
        </section>
    </div>
    <hr>
    <div>
        <section>
            {{>title data="Partners" big=true}}

            <ul>
                {{#each partners}}
                <li><b>{{name}}</b>
                    <br>
                    {{relationship}}
                    <br>
                    {{years}}
                </li>
                {{/each}}
            </ul>
        </section>
    </div>
    <hr>
    <div>
        <section>
            {{>title data="Awards" big=true}}

            <ul>
                {{#each awards}}
                <li><b>{{title}}</b>
                    <br>
                    {{year}}
                    <br>
                    <q>{{description}}</q>
                </li>
                {{/each}}
            </ul>
        </section>
    </div>
    <hr>

    <diV>
        <section>
            {{>title data="Influences" big=true}}

            <ul>
                {{#each influences}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </section>
    </div>
    <hr>

    <diV>
        <section>
            {{>title data="Influenced" big=true}}

            <ul>
                {{#each influenced}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </section>
    </div>
    <hr>

    <diV>
        <section>
            {{>title data="Quotes" big=true}}

            <ul>
                {{#each quotes}}
                <li><q>{{this}}</q></li>
                {{/each}}
            </ul>
        </section>
    </div>
    <hr>

    <div>
        <section>
            {{>title data="Major discoveries" big=true}}

            <ul>
                {{#each major_discoveries}}
                <li><b>{{title}}</b>
                    <br>
                    {{year}}
                    <br>
                    <q>{{description}}</q>
                </li>
                {{/each}}
            </ul>
        </section>
    </div>
    <hr>

    <div>
        <section>
            {{>title data="Contributions" big=true}}

            {{#with contributions}}
            <ul>
                <li><b>{{title}}</b>
                    <br>
                    <q>{{description}}</q>
                    <br>
                    <em>{{year}}</em>
                    <br>
                    {{field}}
                </li>
            </ul>
            {{/with}}

        </section>
    </div>
    <hr>


</div>

