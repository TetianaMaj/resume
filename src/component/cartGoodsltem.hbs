<div class="card m-2">
    <div class="row">
        <div class="col-2">
            <img class="card-img-top" src="https://picsum.photos/110/110">
        </div>
        <div class="col-4">
            <div class="card-body">
                <h5 class="card-title">{{name}}
                </h5>
                <p>{{description}}</p>
            </div>
        </div>
        <div class="col-2">
            {{#with price}}
            {{title}} {{value}}
            {{/with}}
        </div>
        <div class="col-2">
            {{amount}}
        </div>
        <div class="col-2">
            {{#each buttons}}

            {{#if isPrimary}}
            <button class="btn btn-primary m-1 p-1">{{text}}</button>
            {{/if}}
            {{#if isDanger}}
            <button class="btn btn-outline-danger m-1 p-1">{{text}}</button>
            {{/if}}


            {{/each}}
        </div>
    </div>
</div>